@using MvcCv.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div><div class="card">
                            <div class="card-header">
                                <h2>Hobi Listem</h2>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Açıklama 1</th>
                                            <th>Açıklama 2</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Aciklama1</td>
                                                <td>@x.Aciklama2</td>
                                                <td class="text-center"><a href="/Hobilerim/HobiSil/@x.ID" class="btn btn-danger" style="margin-right: 15px">Sil</a></td>
                                                <td class="text-center"><a href="/Hobilerim/HobiGetir/@x.ID" class="btn btn-warning" style="margin-right: 15px">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div></div>
                    </div>
                </div>
            </div>
        </section>
        <a href="/Hobilerim/HobiEkle" class="btn btn-primary">Yeni Hobi Ekle</a>
    </div>
</body>
</html>

