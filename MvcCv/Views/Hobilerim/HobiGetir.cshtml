@model MvcCv.Models.Entity.TblHobilerim
@{
    ViewBag.Title = "HobiGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Sertifika Güncelleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Açıklama 1")
    @Html.TextBoxFor(x => x.Aciklama1, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama 2")
    @Html.TextAreaFor(x => x.Aciklama2, new { @class = "form-control", rows = "3" })
    @Html.ValidationMessageFor(x => x.Aciklama2, "", new { @style = "color:red" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
