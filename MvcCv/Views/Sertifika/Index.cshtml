@using MvcCv.Models.Entity
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string renk = ""; string renkyazi = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <h2>Sertifika Listem</h2>
                        </div>
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var x in Model)
                                    {
                                        if (x.ID % 2 == 0)
                                        {
                                            renk = "btn btn-success";
                                            renkyazi = "bg-success";


                                        }
                                        else
                                        {
                                            renk = "btn btn-primary";
                                            renkyazi = "bg-primary";
                                        }
                                        <div class="time-label">
                                            <a href="/Sertifika/SertifikaGetir/@x.ID" class="@renk">
                                                <span class="@renkyazi">
                                                    @x.Tarih
                                                </span>
                                            </a>
                                        </div>
                                        <div>
                                            @*<i class="fas fa-comment bg-primary"></i>*@
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @x.Aciklama
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/Sertifika/SertifikaEkle" class="btn btn-primary">Yeni Sertifika Ekle</a>
        </div>
    </section>
</body>
</html>


